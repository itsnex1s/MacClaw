{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MacClaw",
  "version": "0.1.0",
  "identifier": "ai.macclaw.panel",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1520",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "MacClaw",
        "width": 750,
        "height": 56,
        "minWidth": 640,
        "minHeight": 48,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "visible": false,
        "resizable": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; font-src 'self' data:; connect-src 'self' ws: wss: http: https:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Productivity",
    "shortDescription": "Raycast-style macOS client for OpenClaw",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "11.0"
    }
  }
}
